@model GuildCars.UI2.Models.VehicleAndSpecialsView

@{
    ViewBag.Title = "Home Page";
}



<div class="jumbotron" id="indexJumbotron" onclick="location.href='@Url.Action("Index", "Specials")'">
    <div class="carousel slide" id='specialsCarousel' data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var special in Model.Specials)
            {
                if (special.SpecialID == 1)
                {
                    <div class="col-lg-12 col-md-12 item active">
                       
                        <div class="col-lg-6 col-md-6">
                            <h1>@special.SpecialTitle</h1>
                            <p>@special.SpecialDescription</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-12 col-md-12 item">
                       
                        <div class="col-lg-6 col-md-6">
                            <h1>@special.SpecialTitle</h1>
                            <p>@special.SpecialDescription</p>
                        </div>
                    </div>
                }
            }
            <a class="carousel-control-prev" href="#specialsCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#specialsCarousel" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>



<div class="col-xs-12">
    <h2>Featured Vehicles</h2>
    @foreach (var vehicle in @Model.Vehicles)
    {
        if (vehicle.IsFeatured)
        {
            <div class="col-xs-12 col-sm-6 col-md-3">
                <p>
                    <img src="@Url.Content("~/Images/" +vehicle.VehicleImage)" / id="featuredVehicles">
                </p>

                <p>@vehicle.VehicleYear @vehicle.Make @vehicle.Model</p>

                <p>@vehicle.MSRP.ToString("c")</p>
            </div>
        }


    }
</div>








