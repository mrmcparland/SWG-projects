@model GuildCars.UI2.Models.SpecialsViewModel



@{
    ViewBag.Title = "Special";
}

<h2>Specials</h2>
<div>
    @using (Html.BeginForm("AddSpecial", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "addSpecial" }))
    {
    
        <div class="col-sm-3 col-md-3">
            <div class="form-group">
                <p>
                    <label>Title</label>
                    @Html.TextBoxFor(m => m.addSpecial.SpecialTitle, new { @class = "form-control" })
                </p>
                <p>
                    <label>Description</label>
                    @Html.TextBoxFor(m => m.addSpecial.SpecialDescription, new { @class = "form-control" })
                </p>
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
        @Html.ValidationSummary()

    }
    
</div>
<div>
    @using(Html.BeginForm("DeleteSpecial","Admin",FormMethod.Post))
    {foreach (var special in Model.SpecialsList)
    {
        <div id="specialHomePg">
            @Html.Hidden("specialID", special.SpecialID)
            <p><strong>@special.SpecialTitle</strong> <button onclick="return confirm('Are you sure you want to delete this special?')" class="btn btn-danger" style="float: right;">Delete</button></p>
            <p>@special.SpecialDescription</p>
        </div>
    }
    }

</div>