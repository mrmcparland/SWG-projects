@model GuildCars.UI2.Models.VehicleViewModel

@{
    ViewBag.Title = "AddVehicle";
}

<h2>Add Vehicle</h2>

<div class="col-xs-12">


    @using (Html.BeginForm("AddVehicle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "addVehicle" }))
    {
        @Html.ValidationSummary()
        

        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>Make</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>Model</label>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.MakeID, Model.Make, new { Class = "form-control", onchange = "getModels()" })

                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.ModelID, Model.Model, new { @class = "form-control" })
                </div>
                <br />
                <br />

            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>Type</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>Body Style</label>
            </div>

            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.NewOrUsed, Model.newOrUsed, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.BodyStyleId, Model.BodyStyle, new { Class = "form-control" })
                </div>

            </div>
            <br />
            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>Year</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>Transmission</label>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Vehicles.VehicleYear, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.IsManual, Model.transmission, new { @class = "form-control" })

                </div>
                <br />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>Color</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>Interior</label>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.ExtColorID, Model.extColor, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Vehicles.IntColorID, Model.intColor, new { @class = "form-control" })

                </div>
                <br />
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>Mileage</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>VIN #</label>
            </div>

            <br />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Vehicles.Mileage, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Vehicles.VIN, new { @class = "form-control" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <label>MSRP</label>
            </div>
            <div class="col-sm-3 col-md-3">
                <label>Sales Price</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Vehicles.MSRP, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Vehicles.SalesPrice, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextBoxFor(m => m.Vehicles.VehicleDescription, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            
            <div class="form-group">
                <label>Image</label>
                <input id="ImageUpload"  name="ImageUpload" type="file" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <label>
                        @Html.CheckBoxFor(m => m.Vehicles.IsFeatured) Feature this vehicle
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3">

                
                <button class="btn btn-primary">Save</button>

            </div>
            <div class="col-sm-3 col-md-3">

            </div>
        </div>


    }
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#salesLog').validate({
                rules:{
                    'Vehicles.Make': {
                        required:true
                    },
                    'Vehicles.NewOrUsed': {
                        required:true
                    }
            }
            })
        });
        function getModels(@Model.Vehicles.Make) {

            $.ajax({
                type: 'GET',
                url: 'https://localhost:44380/api/EditVehicle/Admin/' + $('#Vehicles_MakeID').val(),
                success: function (result) {
                    //alert(result);
                    $('#Vehicles_ModelID').empty();

                    $.each(result, function (key, value) {
                        $("#Vehicles_ModelID").append('<option value=' + value.ModelID + '>' + value.Model + '</option>');
                    });
                },
                error: function () {
                    alert('Error getting models, try again later');
                }
            })
        }

    </script>
}

